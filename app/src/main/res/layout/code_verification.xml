<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        app:contentPadding="5dp"
        app:cardElevation="2dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="fill_parent"
            android:padding="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:id="@+id/veri_title"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Code has been sent to you on your \n Mobile number"
                android:textSize="14sp"/>





            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:id="@+id/veri_phone"
                android:layout_margin="20dp"
                android:text="--"
                android:visibility="gone"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Enter Code"
                android:id="@+id/veri_enterOtp"
                android:layout_height="wrap_content" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Verification Code"
               android:gravity="center"
                android:maxLength="4"
                android:id="@+id/edtVerifyCode" />







            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ff0000"
                android:visibility="gone"
                android:text="Error Max Otp Reached"
                android:id="@+id/txtErrormsg" />

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/button_verification_final"
                android:text="Continue"
                android:textColor="#fff"
                android:layout_marginTop="25dp"/>























<LinearLayout
    android:layout_width="wrap_content"
    android:layout_marginTop="15dp"
    android:gravity="center"

    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/timerText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="35"
        />
    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="250dp"
        android:max="60"
        android:layout_marginTop="10dp"
        android:progressDrawable="@drawable/custom_progress_bar_horizontal"
        android:layout_height="wrap_content"
        android:minHeight="10dp"
        android:maxHeight="20dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        />

    <TableRow
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent">


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/veri_notrecieved"
            android:text="Didn't recieve the Code? "
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend Code"
            android:textColor="#d15849"
            android:id="@+id/txtResend" />

    </TableRow>


</LinearLayout>





        </LinearLayout>


    </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>
